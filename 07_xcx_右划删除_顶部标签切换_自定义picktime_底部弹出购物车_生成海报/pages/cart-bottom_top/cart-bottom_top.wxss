.arrow {
  display: inline-block;
  border: 6px solid transparent;
  border-top-color: #000;
  margin-left: 8px;
  position: relative;
  top: 6rpx;
}

/* ---------------------------- */

.modal {
  position: fixed;
  top: 0;
  right: 0;
  bottom: 0;
  left: 0;
  z-index: 1000;
}

.modal-cancel {
  position: absolute;
  z-index: 2000;
  top: 0;
  right: 0;
  bottom: 0;
  left: 0;
  background: rgba(0, 0, 0, 0.3);
}

.bottom-dialog-body {
  width: 100%;
  position: absolute;
  z-index: 3000;
  bottom: 0;
  left: 0;
  background: #fff;
}

.bottom-positon {
  -webkit-transform: translateY(100%);
  transform: translateY(100%);
}

.bottom-positon {
  text-align: center;
}

/* 购物车样式底部规格*/
.bottom-dialog-body {
  height: 730rpx;
  padding: 31rpx 37rpx 36rpx 30rpx;
  box-sizing: border-box;
  border-radius: 30rpx 30rpx 0px 0px;
}

.x-botton {
  display: flex;
  flex-direction: row-reverse;
}

.x-botton image {
  width: 27rpx;
  height: 27rpx;
}

.bot-top-header {
  margin-top: 6rpx;
  height: 225rpx;
  display: flex;
  border-bottom: 2rpx solid #e0e0e0;
}

.header-left {
  width: 180rpx;
  height: 180rpx;
}

.header-left image {
  width: 180rpx;
  height: 180rpx;
  background-color: orange;
}

.header-right {
  margin-left: 30rpx;
  width: 100%;
  height: 180rpx;
}

.header-right {
  display: flex;
  flex-direction: column-reverse;
  align-items: flex-start;
  padding-bottom: 10rpx;
  box-sizing: border-box;
}

.header-right view:nth-child(2) {
  margin-bottom: 12rpx;
  font-size: 32rpx;
  font-family: Arial-BoldMT, Arial;
  font-weight: normal;
  color: rgba(255, 30, 30, 1);
  line-height: 37rpx;
}

.header-right view:nth-child(1) {
  font-size: 26rpx;
  font-family: PingFangSC-Regular, PingFang SC;
  font-weight: 400;
  color: rgba(153, 153, 153, 1);
  line-height: 40rpx;
}

.bot-top-body {
  display: flex;
  flex-direction: column;
  align-items: flex-start;
}

.scroll-view-h {
